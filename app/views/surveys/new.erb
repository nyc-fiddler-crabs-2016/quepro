<h2>create a new survey</h2>

<form class="title-form" method="POST" action="/surveys">
  <input type="text" name="survey[title]" placeholder="name your survey">
  <input type ="submit" value="submit">
</form>

<!-- Add a status column to surveys, set it to unpublished to start. Change it to published once the survey posts -->

<div class="survey-placeholder">
  <%=erb :"surveys/_title_partial" if @survey%>
</div>

<a class="add-question-button" href="/questions/new">add question</a>

<div class="question-placeholder">
  <%= erb :'questions/_question_partial' if @question %>
</div>

<a class="add-choice-button" href="/choices/new">add choice</a>

<div class="choice-placeholder">
  <%= erb :'choices/_choice_partial' if @choice %>
</div>

