
<h2><%= @survey.title %></h2>
  <form class = "complete-survey" method = "POST" action ="/surveys/<%=@survey.id%>/surveys_taken">
  <% @survey.questions.each_with_index do |question, index| %>
    <h4> <%= question.name %> </h4>
    <ul>
      <% question.choices.each do |choice| %>
      <li><input type = "radio" name="response[<%=question.id%>]" value ="<%=choice.id%>"><%=choice.name%></li>
      <% end %>
    </ul>
  <% end %>
  <input type = "submit" value="Submit Your Survey">
  </form>


